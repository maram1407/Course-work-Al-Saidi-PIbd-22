@model IEnumerable<CosmeticShopBusinessLogic.ViewModels.CosmeticViewModel>

@{
    ViewData["Title"] = "Косметика";
}

<div class="text-left">
    <h4>Пополнение склада №@ViewBag.WerehouseId</h4>
</div>

<hr />
<div>
    <a class="text-dark" asp-controller="Werehouse" asp-action="Details" asp-route-id="@ViewBag.WerehouseId">Вернуться назад</a>
</div>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CosmeticName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CosmeticName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm btn-block" asp-action="AddCosmetic" asp-route-cosmeticId="@item.Id" asp-route-werehouseId="@ViewBag.WerehouseId">Пополнить</a>
                </td>
            </tr>
        }
    </tbody>
</table>