@model IEnumerable<CosmeticShopBusinessLogic.ViewModels.WerehouseAvailableViewModel>

@{
    ViewData["Title"] = "Список складов";
}

<div class="text-left">
    <h4>@ViewBag.CosmeticName</h4>
</div>

<hr />
<div class="text-left">
    <h6>@ViewBag.Count или более продуктов в наличии</h6>
</div>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WerehouseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WerehouseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm btn-block" asp-controller="Werehouse"
                       asp-action="ReserveCosmetics" asp-route-werehouseId="@item.WerehouseId"
                       asp-route-cosmeticId="@ViewBag.CosmeticId" asp-route-count="@ViewBag.Count"
                       asp-route-requestId="@ViewBag.RequestId">
                        Зарезервировать
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>