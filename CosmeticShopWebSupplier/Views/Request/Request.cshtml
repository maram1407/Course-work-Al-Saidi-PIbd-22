@model IEnumerable<CosmeticShopBusinessLogic.ViewModels.RequestViewModel>

@{
    ViewData["Title"] = "Заявки";
}

@section Links {
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Werehouse" asp-action="ListWerehouses">Склады</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="BackUp" asp-action="BackUp">Бэкап</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-action="Report">Отчет по продуктам</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Supplier" asp-action="Logout">Выход</a>
            </li>
        </ul>
    </div>
}

<div class="text-left">
    <h4> Список заявок</h4>
</div>

<hr />
<div class="text-left">
    <h6>Поставщик - @Program.Supplier.SupplierFIO</h6>
</div>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum)
                </td>
                <td>
                    @if (item.Status == CosmeticShopBusinessLogic.Enums.RequestStatus.Выполняется)
                    {
                        <a class="btn btn-primary btn-sm btn-block" asp-action="RequestView" asp-route-id="@item.Id">Просмотр заявки</a>
                    }
                    @if (item.Status == CosmeticShopBusinessLogic.Enums.RequestStatus.Создана)
                    {
                        <a class="btn btn-primary btn-sm btn-block" asp-action="AcceptRequest" asp-route-id="@item.Id">Принять в обработку</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>